- content_for :banner_bg do
  .poster(style="background:url('/assets/bk-178.jpg') no-repeat center")
- content_for :image do
  = image_tag 'bk-267.jpg'
- content_for :heading do
  = @post.title.upcase
- content_for :body do
  = @post.body
  %hr

  = semantic_form_for @message do |f|
    = f.input :name, placeholder: "Name", label: false
    = f.input :email, placeholder: "Email", label: false
    = f.input :body, placeholder: "Message", label: false, input_html: { rows: 3 }
    %span If your question about a specific item please select it here.
    %span= f.input :product_id, as: :select, collection: Product.pluck(:name, :id)
    = f.submit "SUBMIT", class: "btn-black"
