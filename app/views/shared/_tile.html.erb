<%= link_to resource do %>
  <div class="hover-tile-outer" style="background-image: url('<%= image_url("sq-8.png") %>')">
    <div class="hover-tile-container">
      <div class="hover-tile hover-tile-visible">
        <h3><%= resource.name %></h3>
      </div>
      <div class="hover-tile hover-tile-hidden">
        <h4><%= resource.name %></h4>
        <p><%= resource.description %></p>
      </div>
    </div>
  </div>
<% end %>
