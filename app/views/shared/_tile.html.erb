<%= link_to resource do %>
  <% if current_page? controller: 'pages', action: 'inspiration' %>
  <% image = resource.images.standard_resolution.url %>
  <% else %>
  <% image = resource.image.url %>
  <% end %>
  <div class="hover-tile-outer" style="background-image: url('<%= image_url image %>')">
    <div class="hover-tile-container">
      <div class="hover-tile hover-tile-visible">
      </div>
      <div class="hover-tile hover-tile-hidden <%= 'instagram-tile' if current_page? controller: 'pages', action: 'inspiration' %>">
        <h3><%= resource.name if resource.respond_to?(:name) %></h3>
        <%= resource.caption.text if resource.respond_to?(:caption) %>
        <h4><%= resource.human_price if resource.respond_to?(:human_price) %></h4>
      </div>
    </div>
  </div>
<% end %>
