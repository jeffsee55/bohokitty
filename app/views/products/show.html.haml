- content_for :banner_bg do
  .spacer
- content_for :image do
  .slideshow
    .main
      .right
        %i.fa.fa-2x.fa-angle-right
      .left
        %i.fa.fa-2x.fa-angle-left
    %ul.thumbs
      - @product.images.limit(4).each do |image|
        %li(style='background-image: url("#{image.url('medium')}")')
- content_for :heading do
  = @product.name.upcase
- content_for :body do
  = @product.description
- content_for :price do
  = "$#{@product.human_price}"
- content_for :buttons do
  %hr

  - if cart_session
    = form_tag controller: "cart_sessions", action: "add_item" do
      = hidden_field_tag :product_name, @product.name
      = hidden_field_tag :product_id, @product.id
      = hidden_field_tag :product_price, @product.price
      = hidden_field_tag :qty, 1
      = select_tag :ribbon_color, options_for_select([ "Ivory", "White" ], "Ivory")
      = submit_tag "ADD TO CART", class: "btn-black"
  - else
    = form_tag controller: "cart_sessions", action: "create" do
      = hidden_field_tag :product_name, @product.name
      = hidden_field_tag :product_id, @product.id
      = hidden_field_tag :product_price, @product.price
      = hidden_field_tag :qty, 1
      = select_tag :ribbon_color, options_for_select([ "Ivory", "White" ], "Ivory")
      = submit_tag "ADD TO CART", class: "btn-black"
- content_for :additional do
  .container
    %p
      When purchasing this product please leave a note in the sellers box stating your
      choice of ribbon color and any other modifications you would like. Although we
      encourage customization of our BK pieces to suit your needs, we will not copy any
      other outside designs.
    %p
      Because all BK designs are handmade and develop organically, patterns may vary
      slightly but will look very similar to the piece in photos. This enhances the free-
      spirited nature of the BK brand, and ensures our customers a true one of a kind
      piece.
